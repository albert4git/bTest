#=======================================================================================

# all: h1EX

# h1EX: hello.o
# 	 gcc -o h1EX hello.o

# hello.o: hello.c
# 	 gcc -c hello.c
     
# clean:
# 	 rm hello.o h1EX

#=======================================================================================
# vim:ft=make
#=======================================================================================
all: h3EX
 
# $@ matches the target; $< matches the first dependent
h3EX: hello.o
	gcc -o $@ $<

hello.o: hello.c
	gcc -c $<
     
clean:
	rm hello.o h3EX

run: h3EX
	./h3EX


#=======================================================================================
#=======================================================================================
